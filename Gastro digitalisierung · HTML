    <script>
        // Calculator functionality
        function calculateLoss() {
            const missedCalls = parseInt(document.getElementById('missedCalls').value) || 0;
            const avgReservation = parseInt(document.getElementById('avgReservation').value) || 0;
            const conversionRate = 0.6; // 60% would have booked
            const workDaysPerYear = 300; // ~300 days open per year for restaurants
            
            const yearlyLoss = missedCalls * avgReservation * conversionRate * workDaysPerYear;
            document.getElementById('yearlyLoss').textContent = yearlyLoss.toLocaleString('de-CH') + ' CHF';
        }

        document.getElementById('missedCalls').addEventListener('input', calculateLoss);
        document.getElementById('avgReservation').addEventListener('input', calculateLoss);
        
        // Initialize calculator
        calculateLoss();

        // Smooth scrolling for anchor links
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function (e) {
                e.preventDefault();
                const target = document.querySelector(this.getAttribute('href'));
                if (target) {
                    target.scrollIntoView({
                        behavior: 'smooth',
                        block: 'start'
                    });
                }
            });
        });
    </script>
